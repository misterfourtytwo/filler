{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Konstruktor (Web - Chrome)",
      "request": "launch",
      "type": "dart",
      "deviceId": "chrome",
      "args": [
        "--web-browser-flag=--disable-web-security",
        "--web-port=8089"
      ]
    },
    {
      "name": "Konstruktor (Web - Chrome with WASM)",
      "request": "launch",
      "type": "dart",
      "deviceId": "chrome",
      "args": [
        "--web-browser-flag=--disable-web-security",
        "--web-port=8089",
        "--dart-define=FLUTTER_WEB_USE_SKIA=true"
      ]
    },
    {
      "name": "Konstruktor (Web - Edge)",
      "request": "launch",
      "type": "dart",
      "deviceId": "edge",
      "args": [
        "--web-browser-flag=--disable-web-security",
        "--web-port=8080"
      ]
    },
    {
      "name": "Konstruktor (Web - Release Mode)",
      "request": "launch",
      "type": "dart",
      "deviceId": "chrome",
      "flutterMode": "release",
      "args": [
        "--web-port=8089"
      ]
    },
    {
      "name": "Konstruktor (Web - Profile Mode)",
      "request": "launch",
      "type": "dart",
      "deviceId": "chrome",
      "flutterMode": "profile",
      "args": [
        "--web-port=8080"
      ]
    }
  ]
}